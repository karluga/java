<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<TabPane xmlns:fx="http://javafx.com/fxml" fx:controller="application.controllers.LoginController">
    <Tab text="Login">
        <VBox alignment="CENTER" spacing="10" style="-fx-padding: 20;">
            <TextField fx:id="usernameField" promptText="Username"/>
            <PasswordField fx:id="passwordField" promptText="Password"/>
            <Button onAction="#handleLogin" text="Login"/>
            <Label fx:id="statusLabel"/>
        </VBox>
    </Tab>
    <Tab text="Register">
        <VBox alignment="CENTER" spacing="10" style="-fx-padding: 20;">
            <TextField fx:id="registerUsernameField" promptText="Username"/>
            <PasswordField fx:id="registerPasswordField" promptText="Password"/>
            <Button onAction="#handleRegister" text="Register"/>
            <Label fx:id="registerStatusLabel"/>
        </VBox>
    </Tab>
</TabPane>